{
    "scripts": {
        "script": {
            "class": "Script",
            "properties": {
                "required": [
                    "id", "x", "y", "width", "height", "type"
                ],
                "optional": [
                    { "name": "is_active", "default": "false" }
                ]
            },
            "children": {
                "run_once": {
                    "class": "RunOnce",
                    "properties": {
                        "optional": [
                            { "name": "delay", "default": "0" }
                        ]
                    }
                },
                "set_timer": {
                    "class": "SetTimer",
                    "properties": {
                        "required": [
                            "duration"
                        ]
                    }
                }
            }
        }
    }
}